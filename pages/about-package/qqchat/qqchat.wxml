<!--pages/about-package/qqchat/qqchat.wxml-->

<view class="box shadow-radius">
	<view class="title">用户交流群</view>
	<t-tabs value="{{nowTab}}" bind:change="changeTabs">
		<t-tab-panel label="QQ" value="QQ"></t-tab-panel>
		<t-tab-panel label="公众号" value="公众号"></t-tab-panel>
		<t-tab-panel label="TG" value="TG"></t-tab-panel>
	</t-tabs>

	<view wx:if="{{nowTab=='QQ'}}">
		<image show-menu-by-longpress="true" class="logo" src="/static/image/qrcode-QQ.png" mode="aspectFit" bindtap="click"></image>
		<view>扫码加入QQ用户交流群</view>
	</view>
	<view wx:if="{{nowTab=='公众号'}}">
		<image show-menu-by-longpress="true" class="logo" src="/static/image/qrcode-official.png" mode="aspectFit" bindtap="click"></image>
		<view>扫码关注公众号</view>
	</view>
	<view wx:if="{{nowTab=='TG'}}">
		<image show-menu-by-longpress="true" class="logo" src="/static/image/qrcode-telegram.png" mode="aspectFit" bindtap="click"></image>
		<view>扫码加入Telegram群</view>
	</view>
</view>